{
  "manifest_version": 3,
  "name": "Bubbie's Twilio Notification",
  "description": "Never miss a task again...",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
      "activeTab",
      "scripting"
  ],
  "background": {
      "service_worker": "service-worker.js",
      "type": "module"
  },
  "content_scripts": [ 
      {
          "matches": [ "<all_urls>" ],
          "js": [ "content-script.js" ]
      }
  ]
}


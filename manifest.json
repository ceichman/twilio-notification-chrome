{
  "manifest_version": 3,
  "name": "Bubbie's Twilio Notification",
  "description": "Never miss a task again...",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
      "activeTab",
      "scripting"
  ],
  "web_accessible_resources": [
      {
          "resources": [ "sounds/sound.mp3" ],
          "matches": [ "<all_urls>" ]
      }
  ],
  "content_scripts": [ 
      {
          "matches": [ "<all_urls>" ],
          "js": [ "content-script.js" ]
      }
  ]
}

